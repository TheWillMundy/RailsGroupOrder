<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="jumbotron">
  <h2>GroupOrder is osm</h2>
  <h3>Explore Products!!<br> Leave reviews too fam</h3>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Price</th>
      <% if user_signed_in? && current_user.admin? %>
        <th colspan="2"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
        <td><%= product.user %></td>
        <td><%= product.price %></td>
        <td><%= image_tag(product.productimage_url, height: '200') %></td>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'New Product', new_product_path %>
<% end %>
