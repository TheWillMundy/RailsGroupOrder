<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>Products</h1>

  <div class="jumbotron">
    <h2>GroupOrder is osm</h2>
    <h3>Explore Products!!<br> Leave reviews too fam</h3>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>User</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.user %></td>
          <td><%= product.price %></td>
          <td><%= image_tag(product.productimage_url, height: '200') %></td>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Product', new_product_path %>
</div>
